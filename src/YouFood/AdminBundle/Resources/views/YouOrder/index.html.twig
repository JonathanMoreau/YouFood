{% extends 'YouFoodAdminBundle::layout.html.twig' %}

{% block title %}Les Commandes{% endblock %}

{% block content %}
<div class="page-header">
    <h1>
        Liste des Commandes
        <small>les commandes passées sur YouFood.</small>
    </h1>
</div>

<table class="table table-striped table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Payé ?</th>
            <th>Montant</th>
            <th>Passée le</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{% if entity.payement == 1 %}<span class="label label-success">Payé</span>{% else %}<span class="label label-warning">Non payé</span>{% endif %}</td>
            <td>{{ entity.amount }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p>
    <a class="btn btn-large btn-primary" href="{{ path('YouOrder_new') }}">Créer une commande</a>
</p>
{% endblock %}
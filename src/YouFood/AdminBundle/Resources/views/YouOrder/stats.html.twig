{% extends 'YouFoodAdminBundle::layout.html.twig' %}

{% block title %}Les Statistiques{% endblock %}

{% block content %}
<div class="page-header">
    <h1>
        Statistiques
        <small>des plats les plus commandés par les clients.</small>
    </h1>
</div>

<table class="table table-striped table table-bordered">
    <thead>
        <tr>
            <th class="span1">Quantité</th>
            <th class="span2">Photo</th>
            <th>Plat</th>
        </tr>
    </thead>
    <tbody>
    {% for youOrderFood in youOrderFoods %}
        <tr>
            <td><strong>{{ youOrderFood.quantity }}</strong></td>
            <td><img src="{{ asset(youOrderFood[0].food.description) }}" alt="{{ youOrderFood[0].food.name }}" style="width: 200px;"/></td>
            <td>{{ youOrderFood[0].food.name }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
{% extends 'YouFoodAdminBundle::layout.html.twig' %}

{% block title %}Les Utilisateurs{% endblock %}

{% block content %}
<div class="page-header">
    <h1>
        Liste des Utilisateurs
        <small>les utilisateurs de youfood.</small>
    </h1>
</div>

<table class="table table-striped table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>
                {% if entity.status == 1 %}
                Serveur
                {% else %}
                Utilisateur
                {% endif %}
            </td>
            <td>
                <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a> - 
                <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p>
    <a class="btn btn-large btn-primary" href="{{ path('user_new') }}">Ajouter un Utilisateur</a>
</p>
{% endblock %}
{% extends 'YouFoodAdminBundle::layout.html.twig' %}

{% block title %}Plat {{ entity.name }}{% endblock %}

{% block content %}
<div class="page-header">
    <h1>
        Plat {{ entity.name }}
        <small>{{ entity.description }}.</small>
    </h1>
</div>

<table class="table table-condensed table-striped table table-bordered">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<div class="form-actions">
    <form action="{{ path('food_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <a class="btn btn-large btn-primary" href="{{ path('food_edit', { 'id': entity.id }) }}">Modifier</a>
        <button class="btn btn-large btn-danger" type="submit">Supprimer</button>
        <a class="btn btn-large" href="{{ path('food') }}">Retour Ã  la liste des plats</a>
    </form>
</div>

{% endblock %}

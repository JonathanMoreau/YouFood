{% extends 'YouFoodAdminBundle::layout.html.twig' %}

{% block title %}Les Plats{% endblock %}

{% block content %}
<div class="page-header">
    <h1>
        Liste des Plats
        <small>les plats disponibles pour youfood.</small>
    </h1>
</div>

<table class="table table-striped table table-bordered" id="food">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cat√©gorie</th>
            <th>Photo</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('food_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.category.name }}</td>
            <td><img src="{{ asset(entity.description) }}" alt="{{ entity.name }}" style="width: 200px;"/></td>
            <td>{{ entity.name }}</td>

            <td>
                <a href="{{ path('food_show', { 'id': entity.id }) }}">voir</a> -
                <a href="{{ path('food_edit', { 'id': entity.id }) }}">modifier</a> -
                <a href="{{ path('food_delete', { 'id': entity.id }) }}">supprimer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p>
    <a class="btn btn-large btn-primary" href="{{ path('food_new') }}">Ajouter un plat</a>
</p>

<script>
    $(document).ready(function() {
        $("#food").tablesorter({sortList: [[1,1]]}); 
    });
</script>
{% endblock %}

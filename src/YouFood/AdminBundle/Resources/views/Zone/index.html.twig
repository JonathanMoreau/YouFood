{% extends 'YouFoodAdminBundle::layout.html.twig' %}

{% block title %}Les Zones{% endblock %}

{% block content %}
<div class="page-header">
    <h1>
        Liste des Zones
        <small>les zones des salles youfood.</small>
    </h1>
</div>

<table class="table table-striped table table-bordered">
    <thead>
        <tr>
            <th class="span1">Id</th>
            <th class="span5">Name</th>
            <th class="span5">Responsable</th>
            <th class="span1">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('zone_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{% if entity.user %}{{entity.user.name}}{% endif %}</td>
            <td>
                <a href="{{ path('zone_show', { 'id': entity.id }) }}">show</a> - 
                <a href="{{ path('zone_edit', { 'id': entity.id }) }}">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p>
    <a class="btn btn-large btn-primary" href="{{ path('zone_new') }}">Ajouter une Zone</a>
</p>
{% endblock %}
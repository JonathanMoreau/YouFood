{% extends 'YouFoodAdminBundle::layout.html.twig' %}

{% block title %}Les Tables{% endblock %}

{% block content %}
<div class="page-header">
    <h1>
        Liste des Tables
        <small>les tables des salles de youfood.</small>
    </h1>
</div>

<table class="table table-striped table table-bordered">
    <thead>
        <tr>
            <th class="span1">Id</th>
            <th>Numéro</th>
            <th>Responsable</th>
            <th class="span2">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('board_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.number }}</td>
            <td>
                {% if entity.zone.user %}{{ entity.zone.user.name }}{% else %}Non configuré{% endif %}
            </td>
            <td>
                <a href="{{ path('board_show', { 'id': entity.id }) }}">show</a> - 
                <a href="{{ path('board_edit', { 'id': entity.id }) }}">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p>
    <a class="btn btn-large btn-primary" href="{{ path('board_new') }}">Ajouter une Table</a>
</p>
{% endblock %}